---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
import { Icon } from '@iconify/react';
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
      <div class="py-6 md:order-1 hidden md:block">
        <Picture
          src={heroImage}
          alt="Image Splitter Illustration"
          widths={[200, 400, 600]}
          sizes="(max-width: 800px) 100vw, 620px"
          loading="eager"
          format="avif"
        />
      </div>
      <div>
        <h1
          class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter dark:text-white">
          Smart Image Splitter
        </h1>
        <p class="text-lg mt-4 text-slate-600 max-w-xl dark:text-slate-300">
          Effortlessly split your images into equal parts or custom grids. Perfect for social media, web design, and digital art. Upload your image and get perfectly split pieces in seconds.
        </p>
        <div class="mt-6 flex flex-col sm:flex-row gap-3">
          <Link
            href="/split"
            class="flex gap-1 items-center justify-center"
            rel="noopener">
            <Icon client:load icon="fluent:image-24-regular" className="text-white w-5 h-5" />
            Split Images Now
          </Link>
          <Link
            size="lg"
            style="outline"
            rel="noopener"
            href="#features"
            class="flex gap-1 items-center justify-center">
            <Icon client:load icon="fluent:info-24-regular" className="w-4 h-4" />
            Learn More
          </Link>
        </div>
      </div>
    </main>
  </Container>
</div>
